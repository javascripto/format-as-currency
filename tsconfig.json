{
  "compilerOptions": {
    "target": "ESNEXT",                                
    "module": "commonjs",                           
    "declaration": true,                         
    "outDir": "dist",                              
    "strict": true,                                 
    "noImplicitAny": true,                       
    "baseUrl": "src",                             
    "esModuleInterop": true,                        
    "skipLibCheck": true,                           
    "forceConsistentCasingInFileNames": true        
  },
  "exclude": [
    "./src/**/*.spec.ts",
    "./src/**/*.test.ts",
  ]
}
